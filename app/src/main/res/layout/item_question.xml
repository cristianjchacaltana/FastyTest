<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_questions"
    android:layout_width="match_parent"
    android:layout_height="@dimen/question_cardview_height"
    android:layout_marginBottom="@dimen/question_cardview_magin"
    android:layout_marginLeft="@dimen/material_design_margin"
    android:layout_marginRight="@dimen/material_design_margin"
    android:layout_marginTop="@dimen/question_cardview_magin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/text_questions_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="1" />

        <TextView
            android:id="@+id/text_questions_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:text="Pregunta 1" />

    </LinearLayout>

</android.support.v7.widget.CardView>