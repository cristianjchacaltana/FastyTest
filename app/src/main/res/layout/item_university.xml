<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_universities"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/universities_cardview_height"
    android:layout_marginTop="@dimen/universities_cardview_margin"
    android:layout_marginRight="@dimen/material_design_margin"
    android:layout_marginBottom="@dimen/universities_cardview_margin"
    android:layout_marginLeft="@dimen/material_design_margin">

    <ImageView
        android:id="@+id/image_universities_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/text_universities_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/material_design_margin"
        android:text="UNICA"
        style="@style/HeadLine5"/>

</android.support.v7.widget.CardView>